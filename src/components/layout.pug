        {
          let clearCounter = null;
          function setClearInterval(interval = 1000) {
            if (clearCounter) clearInterval(clearCounter);
            clearCounter = setInterval(() => {
              console.clear();
              console.log(`Console cleared automatically after ${interval / 1000} seconds`);
            }, interval);
          }
          window.devtools.setClearInterval = setClearInterval;

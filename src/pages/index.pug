extends /components/layout.pug
include /components/mixins.pug

block title
  title HanchaiN - Creative Coding & Development

block content
  section.hero-section.mb-5
    .row.align-items-center
      .col-lg-8
        h1.display-4.fw-bold.mb-4= pagesData.home.hero.title
        p.lead.mb-4= pagesData.home.hero.description
        .d-flex.gap-3.flex-wrap
          each button in pagesData.home.hero.buttons
            a.btn.btn-lg(
              class=button.class,
              href=button.href,
              target=button.external ? '_blank' : false,
              rel=button.external ? 'noopener noreferrer' : false
            )
              span(aria-hidden='true')!= button.icon
              | #{' '}
              = button.text
      .col-lg-4.mt-4.mt-lg-0
        .feature-preview.p-4.rounded-3.bg-body-secondary
          h5.text-center.mb-3 Featured Categories
          ul.list-unstyled.mb-0
            each category in pagesData.home.hero.featuredCategories
              li.mb-2
                a.text-decoration-none(href=category.href)
                  span(class=`text-${category.color}`, aria-hidden='true')!= category.icon
                  | #{' '}
                  = category.text

  section.highlights-section.mb-5
    h2.h3.fw-bold.mb-4 Highlighted Projects
    .row.g-4
      each highlight in pagesData.home.highlights
        .col-md-6.col-lg-4
          .card.project-card.h-100
            .card-body
              h3.h5.card-title
                span(class=`text-${highlight.color}`, aria-hidden='true')!= highlight.icon
                | #{' '}
                = highlight.title
              p.card-text= highlight.description
              a.stretched-link(href=highlight.href) Learn more

  section.about-section
    .row
      .col-lg-8.mx-auto
        .p-4.rounded-3.bg-body-tertiary
          h2.h4.fw-bold.mb-3= pagesData.home.about.title
          each paragraph, index in pagesData.home.about.paragraphs
            p(class=index === pagesData.home.about.paragraphs.length - 1 ? 'mb-0' : 'mb-3')= paragraph

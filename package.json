{
  "name": "github-pages",
  "packageManager": "yarn@4.9.4",
  "dependencies": {
    "pug": "^3.0.3",
    "serve-handler": "^6.1.6",
    "ts-patch": "^3.3.0",
    "typescript": "^5.9.3",
    "typescript-transform-paths": "^3.5.5"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/katex": "^0.16.7",
    "@types/node": "^24.10.1",
    "@types/p5": "^1.7.7",
    "@types/pug": "^2.0.10",
    "@types/serve-handler": "^6.1.4",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "katex": "^0.16.25",
    "mathjs": "^15.1.0",
    "p5": "^2.1.1",
    "prettier": "^3.6.2",
    "three": "^0.181.2"
  },
  "scripts": {
    "build:bin": "tsc -p tsconfig.build.json",
    "build:scripts": "node dist/bin/build.js --scripts-only",
    "build:public": "node dist/bin/build.js --public-only",
    "build:pages": "node dist/bin/build.js --pages-only",
    "build": "node dist/bin/build.js",
    "dev": "node dist/bin/build.js --dev --watch --serve",
    "serve": "node dist/bin/build.js --serve",
    "watch": "node dist/bin/build.js --watch --serve",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "deps": "node dist/bin/dependency-report.js",
    "deps:json": "node dist/bin/dependency-report.js --json",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore --write .",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "validate": "yarn run typecheck && yarn run lint && yarn run format:check"
  }
}
